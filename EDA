library(vegan)

# otu table
OTUtable <-  read.table('OTU.csv', sep = ",", header = TRUE)
dim(OTUtable)
# set index
rownames(OTUtable) <- OTUtable$SampleID
OTUtable <- OTUtable[,2:9114]
dim(OTUtable)
rownames(OTUtable)
colnames(OTUtable)


# use total number to explore the data distribution 
df <- data.frame(colSums(OTUtable))
colnames(df) <- c('total')

